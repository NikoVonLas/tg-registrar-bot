# Токен вашего Telegram бота (получите у @BotFather)
BOT_TOKEN=your_bot_token_here

# ID администраторов (через запятую)
# При деплое через Bot Platform заполняется автоматически
# Для локальной разработки укажите свой ID (получите у @userinfobot)
BOT_ADMIN_IDS=123456789,987654321

# Легаси: единственный админ (для обратной совместимости)
ADMIN_USER_ID=123456789

# Язык интерфейса (en-US или ru-RU, по умолчанию: en-US)
# Также принимает: en, ru (автоматически преобразуется)
LANGUAGE=en-US

# Режим отладки (опционально)
DEBUG=false
