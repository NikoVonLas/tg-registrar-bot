# Токен вашего Telegram бота (получите у @BotFather)
BOT_TOKEN=your_bot_token_here

# ID администраторов
# При деплое через Bot Platform заполняются автоматически:
# - BOT_OWNER_ID (владелец бота)
# - BOT_ADMIN_IDS (дополнительные админы, через запятую)
# Для локальной разработки укажите вручную:
BOT_OWNER_ID=123456789
BOT_ADMIN_IDS=987654321,555555555

# Язык интерфейса (en-US или ru-RU, по умолчанию: en-US)
# Также принимает: en, ru (автоматически преобразуется)
LANGUAGE=en-US

# Режим отладки (опционально)
DEBUG=false
